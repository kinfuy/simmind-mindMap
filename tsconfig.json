{
  "compilerOptions": {
    "module": "esnext",
    "declaration": true,
    "removeComments": true,
    "moduleResolution": "node",
    "declarationDir": "./dist/types",
    "esModuleInterop": true,
    "jsx": "preserve",
    "jsxFactory": "h",
    "jsxFragmentFactory": "Fragment",
    "noLib": false,
    "target": "es6",
    "sourceMap": true,
    "strict": true,
    "suppressExcessPropertyErrors": true,
    "lib": [
      "esnext", "dom"
    ]
  },
  "include": ["package/**/*","typings"],
  "exclude": [
    "node_modules"
  ]
 }